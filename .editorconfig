root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 4

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.{cs,csx}]
indent_style = space
indent_size = 4

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

[*.{html,htm}]
indent_style = space
indent_size = 2